---
/**
 * WAF Block Page - English
 * Displayed when a request triggers WAF rules
 */
import GlassLayout from '../../layouts/GlassLayout.astro'
import { useTranslations } from '../../i18n/utils'

const t = useTranslations('en')
const config = t.errorPages['waf-block']
---

<GlassLayout title={config.title} lang="en" contentPosition="right">
	<div class="space-y-6">
		<!-- Title Section -->
		<div class="space-y-2 border-b border-slate-200/60 pb-6">
			<div class="flex items-center space-x-3">
				<div class="flex items-center justify-center w-10 h-10 rounded-full bg-red-100 text-red-500 ring-4 ring-red-50">
					<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
					</svg>
				</div>
				<h1 class="text-3xl font-bold text-slate-800 tracking-tight">
					{config.heading}
				</h1>
			</div>
			<p class="text-base text-slate-600 font-medium pl-13">{config.subHeading}</p>
		</div>

		<!-- Description -->
		<div class="bg-slate-50/50 rounded-xl p-5 border border-slate-100">
			<div class="text-slate-600 leading-relaxed text-sm space-y-2" set:html={config.description} />
		</div>

		<!-- Technical Details -->
		<div class="pt-2 space-y-3">
			<div class="flex items-center justify-between text-sm bg-white/40 p-3 rounded-lg border border-white/50">
				<span class="text-slate-500 font-medium flex items-center gap-2">
					<svg class="w-4 h-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					Ray ID
				</span>
				<code class="font-mono text-blue-600 font-semibold">::RAY_ID::</code>
			</div>
			<div class="flex items-center justify-between text-sm bg-white/40 p-3 rounded-lg border border-white/50">
				<span class="text-slate-500 font-medium flex items-center gap-2">
					<svg class="w-4 h-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
					</svg>
					Client IP
				</span>
				<code class="font-mono text-blue-600 font-semibold">::CLIENT_IP::</code>
			</div>
		</div>
	</div>
</GlassLayout>
