---
/**
 * 5xx Page - English
 */
import GlassLayout from '../../layouts/GlassLayout.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
const config = t.errorPages['5xx'];
---

<GlassLayout title={config.title} lang="en" contentPosition="right">
  <div class="space-y-6">
    <div class="space-y-2 border-b border-slate-200/60 pb-6">
        <div class="flex items-center space-x-3">
            <div class="flex items-center justify-center w-10 h-10 rounded-full bg-red-100 text-red-600 ring-4 ring-red-50">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-slate-800 tracking-tight">
                {config.heading}
            </h1>
        </div>
        <p class="text-base text-slate-600 font-medium pl-13">{config.subHeading}</p>
    </div>

    <div class="bg-slate-50/50 rounded-xl p-5 border border-slate-100">
         <div class="text-slate-600 leading-relaxed text-sm space-y-4">
            <div set:html={config.description}></div>
            <div class="hidden empty:hidden">::CLOUDFLARE_ERROR_500S_BOX::</div>
         </div>
    </div>

    <div class="pt-2 space-y-3">
        <div class="flex items-center justify-between text-sm bg-white/40 p-3 rounded-lg border border-white/50">
            <span class="text-slate-500 font-medium">Ray ID</span>
            <code class="font-mono text-blue-600 font-semibold">::RAY_ID::</code>
        </div>
        <div class="flex items-center justify-between text-sm bg-white/40 p-3 rounded-lg border border-white/50">
             <span class="text-slate-500 font-medium">Client IP</span>
            <code class="font-mono text-blue-600 font-semibold">::CLIENT_IP::</code>
        </div>
    </div>
  </div>
</GlassLayout>
