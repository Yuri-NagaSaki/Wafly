---
/**
 * Homepage - List of all available error pages (English)
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');

const errorPages = Object.entries(t.errorPages).map(([key, config]) => ({
  path: `/en/${key}`,
  title: config.title,
  heading: config.heading,
}));
---

<BaseLayout title={t.index.title} lang="en">
  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }
    .header {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
    }
    .header h1 {
      font-size: 2.5rem;
      color: #22292f;
      margin-bottom: 0.5rem;
    }
    .header p {
      font-size: 1.2rem;
      color: #606f7b;
    }
    .lang-switch {
      position: absolute;
      top: 0;
      right: 0;
      display: flex;
      gap: 0.5rem;
    }
    .lang-switch a {
      padding: 0.5rem 1rem;
      border: 2px solid #e8e8e8;
      border-radius: 6px;
      text-decoration: none;
      color: #606f7b;
      transition: all 0.3s;
    }
    .lang-switch a:hover {
      border-color: #2779bd;
      color: #2779bd;
    }
    .lang-switch a.active {
      border-color: #2779bd;
      background: #2779bd;
      color: white;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }
    .card {
      background: #fff;
      border: 2px solid #e8e8e8;
      border-radius: 8px;
      padding: 1.5rem;
      transition: all 0.3s ease;
      text-decoration: none;
      color: inherit;
    }
    .card:hover {
      border-color: #2779bd;
      box-shadow: 0 4px 12px rgba(39, 121, 189, 0.15);
      transform: translateY(-2px);
    }
    .card h2 {
      font-size: 1.5rem;
      color: #22292f;
      margin-bottom: 0.5rem;
    }
    .card p {
      color: #606f7b;
      line-height: 1.6;
    }
    .badge {
      display: inline-block;
      background: #64d5ca;
      color: #fff;
      padding: 0.25rem 0.75rem;
      border-radius: 12px;
      font-size: 0.875rem;
      margin-bottom: 0.75rem;
    }
    .footer {
      text-align: center;
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 1px solid #e8e8e8;
      color: #606f7b;
    }
  </style>

  <div class="container">
    <div class="header">
      <div class="lang-switch">
        <a href="/">‰∏≠Êñá</a>
        <a href="/en" class="active">English</a>
      </div>
      <h1>üõ°Ô∏è {t.index.title}</h1>
      <p>{t.index.subtitle}</p>
    </div>

    <div class="grid">
      {
        errorPages.map((page) => (
          <a href={page.path} class="card">
            <span class="badge">{t.index.badge}</span>
            <h2>{page.title}</h2>
            <p>{page.heading}</p>
          </a>
        ))
      }
    </div>

    <div class="footer">
      <p>{t.index.poweredBy}</p>
      <p style="margin-top: 0.5rem; font-size: 0.875rem;">
        {t.index.configLocation}: <code>src/config/site.config.ts</code>
      </p>
    </div>
  </div>
</BaseLayout>
