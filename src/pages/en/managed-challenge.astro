---
/**
 * managed-challenge page - English
 * Managed Challenge - I'm Under Attack Modeâ„¢
 */
import GlassLayout from '../../layouts/GlassLayout.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
const config = t.errorPages['managed-challenge'];
---

<GlassLayout title={config.title} contentPosition="right">
  <div class="space-y-6">
    <div class="space-y-2 border-b border-slate-200/60 pb-6">
        <div class="flex items-center space-x-3">
            <div class="flex items-center justify-center w-10 h-10 rounded-full bg-orange-100 text-orange-500 ring-4 ring-orange-50">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-slate-800 tracking-tight">
                {config.heading}
            </h1>
        </div>
        <p class="text-base text-slate-600 font-medium pl-13">{config.subHeading}</p>
    </div>

    <!-- Captcha Widget Container -->
    <div class="cf-captcha-container min-h-[100px] flex items-center justify-center py-4 bg-slate-50/50 rounded-xl border border-slate-100">
         <div class="text-slate-600">::CAPTCHA_BOX::</div>
    </div>

    <div class="text-sm text-slate-500 text-center">
        {config.description}
    </div>

    <div class="pt-2 space-y-3">
        <div class="flex items-center justify-between text-sm bg-white/40 p-3 rounded-lg border border-white/50">
            <span class="text-slate-500 font-medium">Ray ID</span>
            <code class="font-mono text-blue-600 font-semibold">::RAY_ID::</code>
        </div>
        <div class="flex items-center justify-between text-sm bg-white/40 p-3 rounded-lg border border-white/50">
             <span class="text-slate-500 font-medium">Client IP</span>
            <code class="font-mono text-blue-600 font-semibold">::CLIENT_IP::</code>
        </div>
    </div>
  </div>
</GlassLayout>
